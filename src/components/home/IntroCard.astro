---
interface Props {
  title: string;
  subtitle: string;
  image: string;
  href: string;
}
const { title, subtitle, image, href } = Astro.props;
---

<a href={href} class="group relative">
  <div class="relative z-10 grid gap-1">
    <img src={image} alt={title} class="z-10 w-full rounded-2xl object-cover" />

    <div class="flex flex-col justify-between p-2 sm:p-4">
      <span class="max-xs:text-sm font-bold sm:text-lg md:text-2xl">
        <span>{title}</span>
      </span>
      <span class="text-foreground-muted text-xs tracking-wide sm:text-sm md:text-lg"
        >{subtitle}</span
      >
    </div>
  </div>
  <div
    class="bg-foreground-muted/5 absolute inset-0 h-full w-full scale-97 rounded-2xl opacity-0 transition duration-250 group-hover:scale-100 group-hover:opacity-100"
  >
  </div>
</a>
