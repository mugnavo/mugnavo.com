---
const pathname = Astro.url.pathname;
---

<header
  class="mx-auto flex w-full max-w-screen-xl items-center justify-between px-6 pt-6 pb-2 lg:px-10"
>
  <a
    title="Home"
    class={"text-xl transition hover:brightness-150 font-bold" +
      (pathname === "/" ? " pointer-events-none" : "")}
    href="/"
  >
    Mugnavo
  </a>
  <nav class="flex items-center gap-8">
    <a
      title="Services"
      class="hidden font-medium transition hover:brightness-150 sm:block"
      href="#services"
    >
      Services
    </a>

    <a
      title="Contact"
      href="#contact"
      class="bg-primary text-primary-foreground hover:bg-foreground inline-flex h-13 items-center justify-center rounded-xl px-6 font-semibold transition-colors duration-300"
    >
      Get in touch
    </a>
  </nav>
</header>
