---
const pathname = Astro.url.pathname;
---

<header
  class="mx-auto flex w-full max-w-(--breakpoint-xl) items-center justify-between px-6 pt-8 pb-2 lg:px-10"
>
  <a
    title="Home"
    class={"text-xl transition hover:text-white" + (pathname === "/" ? " pointer-events-none" : "")}
    href="/"
  >
    Mugnavo
  </a>
  <nav class="flex items-center gap-8">
    <a
      title="Services"
      class="hidden font-medium transition hover:text-white sm:block"
      href="#services"
    >
      Services
    </a>

    <a
      title="Contact"
      href="#contact"
      class="bg-primary inline-flex h-13 items-center justify-center rounded-xl px-6 font-semibold text-neutral-950 transition-colors duration-300 hover:bg-neutral-200"
    >
      Contact us
    </a>
  </nav>
</header>
