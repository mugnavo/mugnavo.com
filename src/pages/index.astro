---
import BaseLayout from "~/layouts/_base.astro";

import HeroLogo from "~/components/home/HeroLogo.astro";
import IntroCard from "~/components/home/IntroCard.astro";
import ServicesSection from "~/components/home/ServicesSection.astro";
import Stars from "~/components/home/Stars.astro";

import ContactForm from "~/components/ContactForm";

// TODO
const introCards = [
  {
    title: "Some featured project",
    description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus.",
    image: "TODO",
  },
  {
    title: "Latest blog post, I guess.",
    description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam nec purus.",
    image: "TODO",
  },
];
---

<BaseLayout>
  <section class="flex min-h-[790px] items-center justify-center gap-8">
    <div class="w-full">
      <div
        class="animate-hero-load flex flex-col items-center gap-12 text-center md:items-start md:text-start"
      >
        <h1 class="max-w-sm text-3xl leading-snug font-medium sm:text-5xl md:max-w-md">
          Digital products that can make a
          <span class="text-primary">difference.</span>
        </h1>
        <!-- <h2 class="max-w-sm text-lg text-neutral-300 sm:text-2xl md:max-w-md">
          Products that can make a difference.
        </h2> -->
        <div class="flex gap-4">
          <a
            href="#contact"
            title="Contact us"
            class="inline-flex h-12 items-center justify-center rounded-xl bg-neutral-50 px-5 font-bold text-neutral-950 transition-colors duration-300 hover:bg-neutral-300"
            >Get in touch</a
          >
          <a
            href="#services"
            class="inline-flex h-12 items-center justify-center rounded-xl px-5 font-bold transition-colors duration-300 hover:bg-neutral-900"
            >View services</a
          >
        </div>
      </div>
    </div>
    <HeroLogo />
  </section>

  <div class="flex flex-col">
    <section class="flex h-96 w-full gap-4 rounded-3xl bg-neutral-900 p-6">
      {introCards.map((intro) => <IntroCard {...intro} />)}
    </section>
    <section class="flex min-h-[1080px] w-full items-center justify-center">
      <div class="flex w-fit flex-col items-center gap-16">
        <span class="text-center text-2xl font-bold md:text-4xl">Building for the future.</span>
        <p
          class="max-w-[40ch] text-justify indent-8 text-lg text-neutral-300 md:indent-16 md:text-2xl"
        >
          We are a collective of developers and designers from the Philippines. Our mission is to
          push the boundaries of technological innovation with the latest industry standards and
          best practices.
        </p>
      </div>
      <Stars />
    </section>
    <ServicesSection />
    <section
      class="relative flex min-h-[768px] w-full flex-col items-center justify-center gap-16 2xl:min-h-[960px]"
    >
      <div id="contact" class="absolute top-16"></div>
      <div class="flex flex-col items-center gap-2 text-center">
        <span class="text-xl text-neutral-400 sm:text-3xl"
          >Got a project <span class="text-primary drop-shadow-[0_0_24px_rgba(245,220,120,0.8)]"
            >idea</span
          > in mind?</span
        >
        <span class="text-3xl font-bold sm:text-5xl">Let's get in touch!</span>
      </div>
      <ContactForm client:visible />
    </section>
  </div>
</BaseLayout>
